<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.berryst.demo.mapper.SupervisorMapper">
    <select id="querySupervisorList" resultType="Supervisor">
        select * from supervisor
    </select>

    <select id="querySupervisorById" resultType="Supervisor">
        select * from supervisor where user_id = #{user_id}
    </select>

    <insert id="addSupervisor" parameterType="Supervisor">
        insert into supervisor (user_id, username, password, email) values (#{user_id}, #{username}, #{password}, #{email})
    </insert>

    <update id="updateSupervisor" parameterType="Supervisor">
        update supervisor set username = #{username}, password = #{password}, email = #{email} where user_id = #{user_id}
    </update>

    <delete id="deleteSupervisor" parameterType="int">
        delete from supervisor where user_id = #{user_id}
    </delete>
</mapper>