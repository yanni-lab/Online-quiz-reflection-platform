<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.berryst.demo.mapper.SupervisorMapper">
    <resultMap id="BaseResultMap" type="com.berryst.demo.module.Supervisor" >
        <id column="user_id" property="user_id" jdbcType="INTEGER" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="email" property="email" jdbcType="VARCHAR" />
    </resultMap>
    <select id="querySupervisorList" resultMap="BaseResultMap">
        select * from supervisor
    </select>

    <select id="querySupervisorById" parameterType="int" resultMap="BaseResultMap">
        select * from supervisor where user_id = #{user_id}
    </select>

    <select id="querySupervisorByEmail" parameterType="String" resultMap="BaseResultMap">
        select * from supervisor where email = #{email}
    </select>

    <insert id="addSupervisor" parameterType="com.berryst.demo.module.Supervisor">
        insert into supervisor (username, password, email) values (#{username}, #{password}, #{email})
    </insert>

    <update id="updateSupervisor" parameterType="com.berryst.demo.module.Supervisor">
        update supervisor set username = #{username}, password = #{password}, email = #{email} where user_id = #{user_id}
    </update>

    <delete id="deleteSupervisor" parameterType="int">
        delete from supervisor where user_id = #{user_id}
    </delete>
</mapper>